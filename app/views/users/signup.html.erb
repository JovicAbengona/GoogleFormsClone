<div class="col-lg-4 offset-lg-4 mt-5 bg-light rounded p-3">
    <h2 class="text-success text-center"><i class="fas fa-list-ol"></i> Registration</h2>
    <form id="signup_form" action="/register" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-floating m-3">
            <input type="text" class="form-control" id="first_name" name="signup[first_name]" placeholder="first name">
            <label for="first_name">First Name</label>
        </div>
        <div class="form-floating m-3">
            <input type="text" class="form-control" id="last_name" name="signup[last_name]" placeholder="last name">
            <label for="last_name">Last Name</label>
        </div>
        <div class="form-floating m-3">
            <input type="email" class="form-control" id="email" name="signup[email]" placeholder="email address">
            <label for="email">Email Address</label>
        </div>
        <div class="form-floating m-3">
            <input type="password" class="form-control" id="password" name="signup[password]" placeholder="password">
            <label for="password">Password</label>
        </div>
        <div class="form-floating m-3">
            <input type="password" class="form-control" id="password_confirmation" name="signup[password_confirmation]" placeholder="confirm password">
            <label for="password_confirmation">Password Confirmation</label>
        </div>
        <div class="m-3">
            <button type="submit" class="btn btn-success w-100">Sign Up</button>
            <p class="fst-italic fs-6 mt-2 text-secondary">If you already have an account, click <a href="/" class="link-success">here</a></p>
        </div>
    </form>
</div>