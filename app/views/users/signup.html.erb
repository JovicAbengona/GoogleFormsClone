<div class="col-lg-4 offset-lg-4 mt-5 bg-light rounded p-3">
    <h2 class="text-success text-center"><i class="fas fa-list-ol"></i> Registration</h2>
    <form action="#">
        <div class="form-floating m-3">
            <input type="text" class="form-control" id="signup[first_name]" placeholder="first name">
            <label for="signup[first_name]">First Name</label>
        </div>
        <div class="form-floating m-3">
            <input type="text" class="form-control" id="signup[last_name]" placeholder="last name">
            <label for="signup[last_name]">Last Name</label>
        </div>
        <div class="form-floating m-3">
            <input type="email" class="form-control" id="signup[email_address]" placeholder="email address">
            <label for="signup[email_address]">Email Address</label>
        </div>
        <div class="form-floating m-3">
            <input type="password" class="form-control" id="signup[password]" placeholder="password">
            <label for="signup[password]">Password</label>
        </div>
        <div class="form-floating m-3">
            <input type="password" class="form-control" id="signup[confirm_password]" placeholder="confirm password">
            <label for="signup[confirm_password]">Confirm Password</label>
        </div>
        <div class="m-3">
            <button type="submit" class="btn btn-success w-100">Sign Up</button>
            <p class="fst-italic fs-6 mt-2 text-secondary">If you already have an account, click <a href="/" class="link-success">here</a></p>
        </div>
    </form>
</div>